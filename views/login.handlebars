
<div class="login-page">
  <div class="login-card">
    <div class="login-wrap">
      
      <div class="login-card-header">
        <h2>Welcome!</h2>
      </div>
      
      <form class="login-form">
        <div>
          <input class="field" type="text" id="email-login" placeholder="e-mail address" />
        </div>
        
        <div>
          <input class="field" type="password" id="password-login" placeholder="password" />
        </div>
        
        <div>
          <button type="submit"  class="login-btn">Log In with Email</button>
        </div>
        
        <div>
          <p class="signup-txt">- or -</p>
        </div>

        <div class="g-signin2"  data-onsuccess="onSignIn" align="center">
          <meta name="google-signin-client_id" content=
          "592878734224-1ri6pfkmfslqvnv82ks1bs7n7scaljtn.apps.googleusercontent.com">
          {{!-- <button type="button" class="login-btn-google">Log In with Google</button> --}}
